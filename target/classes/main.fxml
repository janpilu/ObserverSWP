<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.MainController"
            prefHeight="400.0" prefWidth="600.0">
    <ListView fx:id="listView">
        <ListCell fx:id="cell1" text="1"/>
        <ListCell fx:id="cell2" text="2"/>
        <ListCell fx:id="cell3" text="3"/>
    </ListView>
    <VBox>
        <Button fx:id="edit" text="Bearbeiten" onAction="#edit"></Button>
        <Button fx:id="delete" text="Löschen" onAction="#delete"></Button>
        <Button fx:id="add" text="Hinzufügen" onAction="#add"></Button>
    </VBox>

</HBox>
